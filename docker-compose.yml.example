version: '3.8'

services:
  postgres:
    image: postgres:15-alpine
    container_name: ue-assets-postgres
    environment:
      POSTGRES_DB: ${DB_NAME:-ue_assets}
      POSTGRES_USER: ${DB_USERNAME:-postgres}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "${DB_PORT:-5432}:5432"
    networks:
      - ue-assets-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${DB_USERNAME:-postgres}"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  backend:
    build:
      context: ./backend-api
      dockerfile: Dockerfile
    container_name: ue-assets-backend
    environment:
      - NODE_ENV=production
      - PORT=3001
      # ✅ 修复：数据库连接使用服务名，不是 localhost
      - DB_HOST=postgres
      - DB_PORT=5432
      - DB_NAME=${DB_NAME:-ue_assets}
      - DB_USERNAME=${DB_USERNAME:-postgres}
      - DB_PASSWORD=${DB_PASSWORD}
      # JWT 配置
      - JWT_SECRET=${JWT_SECRET}
      - NEXTAUTH_SECRET=${NEXTAUTH_SECRET:-${JWT_SECRET}}
      # CORS 配置
      - FRONTEND_URL=${FRONTEND_URL}
      - ALLOWED_ORIGINS=${ALLOWED_ORIGINS}
      # 用户白名单
      - USER_WHITELIST=${USER_WHITELIST}
      - ADMIN_USERS=${ADMIN_USERS}
    ports:
      - "3001:3001"
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - ue-assets-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/health"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  postgres_data:
    driver: local

networks:
  ue-assets-network:
    driver: bridge







